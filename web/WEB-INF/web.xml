<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>RandomCodeServlet</servlet-name>
        <servlet-class>com.viva.Authentication.RandomCodeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RandomCodeServlet</servlet-name>
        <url-pattern>/imgcode</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginCheckServlet</servlet-name>
        <servlet-class>com.viva.Authentication.LoginCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginCheckServlet</servlet-name>
        <url-pattern>/loginchk</url-pattern>
    </servlet-mapping>

</web-app>
